{
  "name": "good-accounts-api",
  "version": "1.0.0",
  "description": "Treasury management made easy",
  "main": "index.js",
  "scripts": {
    "setup": "npm install",
    "build": "tsc",
    "build-watch": "tsc --watch",
    "start": "node ./dist/infra/restful-api/index.js",
    "dev": "nodemon ./dist/infra/restful-api/index.js",
    "test-only": "jest --coverage",
    "pretest": "npm run build",
    "test": "npm run test-only",
    "watched-test": "jest --watch",
    "clean": "shx rm -rf node_modules/ dist/"
  },
  "author": "Thomas Ferro",
  "license": "MIT",
  "jest": {
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.(jsx?|tsx?)$",
    "coveragePathIgnorePatterns": [
      "/node_modules/",
      "/*/__mock__"
    ],
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ]
  },
  "devDependencies": {
    "@types/bcrypt": "^2.0.0",
    "@types/jest": "^23.0.0",
    "@types/jsonwebtoken": "^7.2.7",
    "@types/express": "^4.16.0",
    "@types/helmet": "0.0.38",
    "body-parser": "^1.18.3",
    "helmet": "^3.12.1",
    "jest": "^23.1.0",
    "shx": "^0.3.1",
    "nodemon": "^1.17.5",
    "ts-jest": "^22.4.6",
    "typescript": "^2.9.1"
  },
  "dependencies": {
    "@google-cloud/storage": "^1.7.0",
    "bcrypt": "^2.0.1",
    "express": "^4.16.3",
    "jsonwebtoken": "^8.3.0"
  }
}
